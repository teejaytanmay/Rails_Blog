<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%# <%= favicon_link_tag 'favicon.ico' %> %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.svg" %>
        <% end %>
      </div>
    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li><a href="https://www.github.com/teejaytanmay">Github</a></li>
      <li><a href="https://www.linkedin.in/teejaytanmay">LinkedIn</a></li>
      <li><a href="mailto:tanmay.jain@iiitb.org">Email</a></li>
    </ul>
    <p class="sign_in">Admin Login</p>
  </div>
  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        <p>All Posts</p>
      <% elsif current_page?(about_path) %>
        <p>About</p>
      <% else %>
        <p><%= link_to "Back to All Posts", root_path %></p>
      <% end %>

      <div class="buttons">
        <%= link_to "New Post", new_post_path, class: "button" %>
        <button class="button">Log Out</button>
      </div>
    </div>
    <% flash.each do |name,msg| %>
      <%= content_tag(:div,msg,class:"alert") %>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
